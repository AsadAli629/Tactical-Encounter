<Window x:Class="Combat.Views.AddEnemyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Enemy" Width="400" Height="450" Background="{StaticResource SurfaceDark}">
    <StackPanel Margin="10">
        <TextBox Name="txtSearch" Width="360" Margin="0,0,0,5"/>
        <ListBox Name="lbUnits" Width="360" Height="300" DisplayMemberPath="Name"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="OK" Width="80" Margin="5" Click="BtnOK_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
