<Page x:Class="Combat.Views.CombatTrackerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundDark}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderDark}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,16">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock x:Name="txtTXE"
                           Text="TXE: 0"
                           HorizontalAlignment="Left"
                           Foreground="{StaticResource PrimaryAccent}"
                           FontWeight="SemiBold"
                           FontSize="18"
                           VerticalAlignment="Center"/>

                <Button Content="Add Enemy"
                        Margin="24,0,0,0"
                        Padding="16,8"
                        HorizontalAlignment="Center"
                        Width="120"
                        Background="{StaticResource PrimaryAccent}"
                        Foreground="Black"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Click="BtnAddEnemy_Click"/>

                <Button Content="Reset TXE"
                        Margin="12,0,0,0"
                        Padding="16,8"
                        HorizontalAlignment="Center"
                        Width="120"
                        Background="{StaticResource DeleteRed}"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Click="BtnResetTXE_Click"/>
                <Button Content="Clear Logs"
        Margin="12,0,0,0"
        Padding="16,8"
        Width="120"
                        HorizontalAlignment="Right"
        Background="{StaticResource DeleteRed}"
        Foreground="White"
        BorderThickness="0"
        FontWeight="SemiBold"
        Click="BtnClearLog_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <!-- Party -->
                <ColumnDefinition Width="*"/>
                <!-- Enemies -->
                <ColumnDefinition Width="320"/>
                <!-- Log -->
            </Grid.ColumnDefinitions>

            <!-- Party Members Panel -->
            <Border Grid.Column="0"
                    Margin="0,0,8,0"
                    Background="{StaticResource SurfaceDark}"
                    BorderBrush="{StaticResource BorderDark}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">

                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Party Members (max 6)"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryAccent}"
                               FontSize="16"
                               Margin="0,0,0,12"/>

                    <StackPanel x:Name="spPartyMembers" DockPanel.Dock="Top"/>

                    <StackPanel DockPanel.Dock="Bottom"
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">

                        <Button Content="Add Member"
                                Padding="16,8"
                                Height="40"
                                FontSize="11"
                                Width="100"
                                Background="{StaticResource PrimaryAccent}"
                                Foreground="Black"
                                BorderThickness="0"
                                Click="BtnAddMember_Click"/>

                        <Button Content="Clear All"
                                Margin="12,0,0,0"
                                Padding="16,8"
                                Height="40"
                                Width="80"
                                Background="{StaticResource DeleteRed}"
                                Foreground="White"
                                BorderThickness="0"
                                Click="BtnClearMembers_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Active Enemies / Combatants Panel -->
            <Border Grid.Column="1"
                    Margin="8,0"
                    Background="{StaticResource SurfaceDark}"
                    BorderBrush="{StaticResource BorderDark}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">

                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Active Combatants"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryAccent}"
                               FontSize="16"
                               Margin="0,0,0,12"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="spActiveEnemies"/>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Combat Log -->
            <Border Grid.Column="2"
                    Margin="2,0,0,0"
                    Background="{StaticResource SurfaceDark}"
                    BorderBrush="{StaticResource BorderDark}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="5">

                <RichTextBox x:Name="rtbCombatLog"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource TextPrimaryDark}"
                             FontSize="14"
                             FontFamily="Consolas, Courier New"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             Padding="0">
                    <RichTextBox.Effect>
                        <DropShadowEffect Color="#00ff41" Direction="0" ShadowDepth="0" 
                          BlurRadius="6" Opacity="0.4" />
                    </RichTextBox.Effect>
                </RichTextBox>
            </Border>
        </Grid>
    </Grid>
</Page>