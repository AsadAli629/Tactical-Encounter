<Window x:Class="Combat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Combat.Views"
        xmlns:local="clr-namespace:Combat"
        mc:Ignorable="d"
        Title="Combat Action Selector"
        Height="720" 
        Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="#f6f8f6"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Light/Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundLight" Color="#f6f8f6"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#102216"/>
        <SolidColorBrush x:Key="SurfaceLight" Color="White"/>
        <SolidColorBrush x:Key="SurfaceDark" Color="#1a2e20"/>
        <SolidColorBrush x:Key="PrimaryAccent" Color="#2bee6c"/>
        <SolidColorBrush x:Key="TextPrimaryLight" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="TextPrimaryDark" Color="#f0f0f0"/>
        <SolidColorBrush x:Key="TextSecondaryLight" Color="#6b7280"/>
        <SolidColorBrush x:Key="TextSecondaryDark" Color="#a0b0a0"/>
        <SolidColorBrush x:Key="BorderLight" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="BorderDark" Color="#28392e"/>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryDark}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryDark}"/>
                    <Setter Property="Background" Value="{StaticResource BorderDark}"/>
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryDark }"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccent}"/>
                    <Setter Property="Background" Value="{StaticResource PrimaryAccent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryDark}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2bee6c"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryDark}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderDark}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Title -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="16,0">
                    <Border Width="28" 
                            Height="28" 
                            Background="{StaticResource PrimaryAccent}" 
                            CornerRadius="6"
                            Margin="0,0,10,0">
                        <TextBlock Text="&#xe53b;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   Foreground="{StaticResource BackgroundDark}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </Border>
                    <TextBlock Text="Combat Manager" 
                               Foreground="{StaticResource TextPrimaryDark}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Tab Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Bottom"
                            Margin="24,0">
                    <Button x:Name="UnitCatalogTab"
                            Content="Unit Catalog"
                            Style="{StaticResource TabButtonStyle}"
                            Tag="Selected"
                            Click="UnitCatalog_Click"/>

                    <Button x:Name="CombatTrackerTab"
                            Content="Combat Tracker"
                            Style="{StaticResource TabButtonStyle}"
                            Margin="4,0,0,0"
                            Click="CombatTracker_Click"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                    <Button Style="{StaticResource IconButtonStyle}"
                            x:Name="MinimizeButton"
                            Click="MinimizeButton_Click">
                        <TextBlock Text="&#xe921;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}"
                            x:Name="MaximizeButton"
                            Click="MaximizeButton_Click">
                        <TextBlock Text="&#xe922;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}"
                            x:Name="CloseButton"
                            Click="CloseButton_Click">
                        <TextBlock Text="&#xe8bb;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="12"
                                   Foreground="#ff5555"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Page Content -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundDark}">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Margin="0"/>
        </Border>
    </Grid>
</Window>