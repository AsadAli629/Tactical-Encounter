<Application x:Class="Combat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Combat"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Light/Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundLight" Color="#f6f8f6"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#102216"/>
        <SolidColorBrush x:Key="SurfaceLight" Color="White"/>
        <SolidColorBrush x:Key="SurfaceDark" Color="#1a2e20"/>
        <SolidColorBrush x:Key="PrimaryAccent" Color="#2bee6c"/>
        <SolidColorBrush x:Key="TextPrimaryLight" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="TextPrimaryDark" Color="#f0f0f0"/>
        <SolidColorBrush x:Key="TextSecondaryLight" Color="#6b7280"/>
        <SolidColorBrush x:Key="TextSecondaryDark" Color="#a0b0a0"/>
        <SolidColorBrush x:Key="BorderLight" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="BorderDark" Color="#28392e"/>
        <SolidColorBrush x:Key="DeleteRed" Color="#FF4444"/>
        <SolidColorBrush x:Key="PanelDark" Color="#1a2e21"/>

        <!-- Hacker / terminal style colors -->
        <SolidColorBrush x:Key="LogDefault"        Color="#e0ffe0" />
        <!-- light green -->
        <SolidColorBrush x:Key="LogEnemyAttack"    Color="#00ff41" />
        <!-- bright matrix green -->
        <SolidColorBrush x:Key="LogPlayerAction"   Color="#aaffaa" />
        <!-- softer green -->
        <SolidColorBrush x:Key="LogTXE"            Color="#ffff00" />
        <!-- yellow for TXE / rewards -->
        <SolidColorBrush x:Key="LogWarning"        Color="#ffaa00" />
        <!-- orange for warnings -->
        <SolidColorBrush x:Key="LogCritical"       Color="#ff4444" />
        <!-- red for defeat / critical -->
        <SolidColorBrush x:Key="LogNameEnemy"      Color="#00ff9d" />
        <!-- cyan-ish for enemy names -->
        <SolidColorBrush x:Key="LogNamePlayer"     Color="#55ff55" />
        <!-- bright green for party names -->

    </Application.Resources>
    


</Application>
